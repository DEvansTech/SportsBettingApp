{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react",
    "lib": ["es6"],
    "moduleResolution": "node",
    "noEmit": true,
    "strict": true,
    "sourceMap": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "importHelpers": true,
    "target": "esnext",
    "baseUrl": "./",
    "resolveJsonModule": true,
    "paths": {
      "@Store": ["src/store"],
      "@Store/*": ["src/store/*"],
      "@Theme": ["src/theme"],
      "@Theme/*": ["src/theme/*"],
      "@Scenes": ["src/scenes"],
      "@Scenes/*": ["src/scenes/*"],
      "@Navigators": ["src/navigators"],
      "@Navigators/*": ["src/navigators/*"],
      "@Components": ["src/components"],
      "@Components/*": ["src/components/*"],
      "@Context": ["src/context"],
      "@Context/*": ["src/context/*"],
      "@Lib": ["./src/lib"],
      "@Lib/*": ["./src/lib/*"],
      "@Assets": ["./src/assets"],
      "@Assets/*": ["./src/assets"]
    }
  },
  "filesGlob": ["typings/index.d.ts", "src/**/*.ts", "src/**/*.tsx"],
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js",
    "test",
    "index.js"
  ],
  "compileOnSave": false
}
